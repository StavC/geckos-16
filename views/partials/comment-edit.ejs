<form action="/comment/edit-comment" method="post"">
  <div class="form-group row justify-content-center">
    <label for="comment" class="col-sm-10"><strong>Edit your comment</strong></label>
    <textarea type="text" class="form-control input-lg col-sm-10" rows="6" name="comment" id="comment"><%= comment.text %></textarea>
    <input type="hidden" name="meetingId" value="<%= meeting.id %>">
    <input type="hidden" name="commentId" value="<%= comment.id %>">
  </div>
  <div class="form-group row justify-content-end">
    <button type="submit" class="btn btn-success">
      Save Changes
    </button>
  </div>
</form>
