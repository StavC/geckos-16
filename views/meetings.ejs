<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <header>
      <% include partials/header %>
    </header>
    <section id="list-meetings">
      <div class="inner-insert container text-center">
        <div class="inner container list">
          <h2><%= user.local.name || user.google.name || user.facebook.name || "" %>: Current Meetings</h2>
          <ul class="list-group">
            <% if (my_meetings.length > 0) { %>
              <% my_meetings.forEach(function(meeting) { %>
                <li class="list-group-item">
                  <a href="<%= meeting.url %>" class="text-dark">
                    <h4><%= meeting.title %></h4>
                    <p><%= meeting.description %></p>
                    <p><%= meeting.location %></p>
                    <p><%= meeting.time %></p>
                  </a>
                </li>
              <% }); %>
            <% } else { %>
              <li class="list-group-item">
                <p>You aren't planning any meetings at the moment.</p>
              </li>
            <% } %>
          </ul>
          <ul class="list-group">
            <% if (other_meetings.length > 0) { %>
              <% other_meetings.forEach(function(meeting) { %>
                <li class="list-group-item">
                  <a href="<%= meeting.url %>" class="text-dark">
                    <h4><%= meeting.title %></h4>
                    <p><%= meeting.description %></p>
                    <p><%= meeting.location %></p>
                    <p><%= meeting.time %></p>
                  </a>
                </li>
              <% }); %>
            <% } else { %>
              <li class="list-group-item">
                <p>You aren't responding to any invitations at the moment.</p>
              </li>
            <% } %>
          </ul>
          <a class="nav-link" href="/meetings/create">Create a meeting <span class="sr-only">(current)</span></a>
        </div>
      </div>
    </section>
    <footer>
      <% include partials/footer %>
    </footer>
    <% include partials/scripts %>
  </body>
</html>